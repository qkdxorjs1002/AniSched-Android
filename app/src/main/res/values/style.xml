<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="UI.Category.Button" parent="Widget.AppCompat.ImageButton">
        <item name="android:paddingBottom">20dp</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:src">@drawable/ic_baseline_calendar</item>
        <item name="android:tint">@color/icon</item>
    </style>

    <style name="UI.Category.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/Font.Category</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Font.ExtendTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Font.DialogTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Font.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="Font.MainList" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Font.TextButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Font.Description" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Font.RaisedButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Font.SubHeader" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textDisabled</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Font.SubList" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textDisabled</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Font.Category" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textDisabled</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Font.Toolbar" parent="Font.DialogTitle">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Font.ToolbarLight" parent="Font.DialogTitle">
        <item name="android:textColor">@color/textLight</item>
    </style>

    <style name="Font.Clear" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/transparent</item>
    </style>
</resources>