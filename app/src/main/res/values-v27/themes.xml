<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AniSched.Main" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primaryDark</item>
        <item name="android:colorControlHighlight">@color/textDisabled</item>

        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.AniSched.Detail" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primaryDark</item>
        <item name="android:colorControlHighlight">@color/textLightSub</item>

        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.AniSched.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>